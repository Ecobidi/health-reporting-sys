<%- include ('../partials/auth-top') %>

<div class="row mx-0 ">
  <div class="col-lg-5 mx-auto py-4">
    <div class="p-4 bg-white">
      <h5>Already a member?</h5>
      <h6 class="font-weight-light">Sign in</h6>
      <div>
        <% if (error_msg.length) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <form action="/patient/login" method="POST" class="pt-3">
        <div class="form-group">
          <label>Patient Registration Number</label>
          <input required type="text" name="patient_reg_no" placeholder="Patient Assigned Registration Number" class="form-control form-control-lg">
        </div>
        <div class="form-group">
          <label>Password <span class="text-info">(default password is test)</span></label>
          <input required type="password" name="password" placeholder="****" class="form-control form-control-lg">
        </div>
        <div class="my-3">
          <button class="btn btn-block btn-primary" type="submit">SIGN IN</button>
        </div>
        <div class="text-center mt-4 font-weight-light">
          Don't have an account yet? Visit the neares health center to get registered.
        </div>
      </form>
    </div>
  </div>			
</div>


<%- include ('../partials/auth-bottom') %>