<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12 d-flex justify-content-between align-items-center underline pb-2 mb-4">
    <h3 class="title text-white text-center">Prescribe Medications</h3>
  </div>
  <div class="col-12">
    <form action="/prescriptions/new" method="POST">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <fieldset class="border p-2 rounded row text-white">
        <legend>Diagnosis Information</legend>
        <div class="form-group col-md-2">
          <label>Patient Reg. No.: <strong class="text-danger">*</strong></label>
           <br>
          <p class="text-white lead font-weight-bold"><%= diagnosis.patient_reg_no %></p>
          <input name="patient_reg_no" type="hidden" value='<%= diagnosis.patient_reg_no %>'> 
        </div>
        <div class="form-group col-md-5">
          <label>Medical Diagnosis: <strong class="text-danger">*</strong></label>
           <br>
          <p class="text-white font-weight-bold"><%= diagnosis.diagnosis %></p>
          <input name="diagnosis" type="hidden" value='<%= diagnosis._id %>' >
        </div>
        <div class="form-group col-md-5">
          <label>Additional Doctor's Remarks: <strong class="text-danger">*</strong></label>
           <br>
          <p class="text-white font-weight-bold"><%= diagnosis.doctor_remarks %></p>
        </div>
      </fieldset>

      <fieldset class="border p-2 rounded row text-white">
        <legend>Prescription Details</legend>
        <div class="form-group col-md-4">
          <label>Doctor's User ID</label>
          <input class="form-control" type="text" name="doctor_user_id">
        </div>
        <div class="form-group col-md-8">
          <label>Prescription: <strong class="text-danger">*</strong></label>
          <textarea class="form-control" name="drug_prescription"></textarea>
        </div>
      </fieldset>
      
      <div class="form-group mt-4">
        <button class="btn btn-success form-control" type="submit">Save Prescription</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>