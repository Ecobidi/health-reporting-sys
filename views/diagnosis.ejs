<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Diagnosis</h3>
      <div>
        <a href="/diagnosis/new" class="btn btn-success">Add Diagnosis</a>
      </div>
    </div>
  </div>

  <div class="row space">
    <div class="col-12">
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Diagnosis</h4>
      <table class="table table-bordered table-striped">
        <thead class="text-white font-weight-bold">
          <tr>
            <td>Patient Reg. No.</td>
            <td>Doctor UserID</td>
            <td>Date of Diagnosis</td>
            <td>Diagnosis Information</td>
            <td>Doctor's Remarks</td>
            <td></td>
          </tr>
        </thead>
        <tbody class="text-white">
          <% diagnosis.forEach((m) => { %>
            <tr>
              <td class="text-right"><%= m.patient_reg_no %></td>
              <td><%= m.doctor_user_id %></td>
              <td><%= m.date_of_diagnosis.toDateString() %></td>
              <td><%= m.diagnosis %></td>
              <td><%= m.doctor_remarks %></td>
              <td>
                <a href='<%= "/prescriptions/new?diagnosis_id=" + m._id %>' class="btn btn-sm btn-primary">Prescribe Drugs</a>
                <a href='<%= "/diagnosis/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 

<%- include ('partials/bottom') %>