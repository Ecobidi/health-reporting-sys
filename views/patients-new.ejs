<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <form action="/patients/new" method="POST">
      <div>
        <% errors.forEach(err => { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= err.msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% }) %>
      </div> 

      <fieldset class="border p-2 rounded row text-white">
        <legend>Patient's Details</legend>
        <div class="form-group col-md-3">
          <label>Patient Reg. Number: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="reg_no">
        </div>
        <div class="form-group col-md-3">
          <label>Surname: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="surname">
        </div>
        <div class="form-group col-md-6">
          <label>Other Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="other_names">
        </div>
        <div class="form-group col-md-4">
          <label>Gender: <strong class="text-danger">*</strong></label>
          <select name="gender" required class="form-control">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Date of Birth: <strong class="text-danger">*</strong></label>
          <input required type="date" class="form-control" name="dob">
        </div>
        <div class="form-group col-md-5">
          <label>Residential Address: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="address">
        </div>
        <div class="form-group col-md-4">
          <label>Mobile Phone: <strong class="text-danger">*</strong></label>
          <input required type="tel" class="form-control" name="phone">
        </div>
        <div class="form-group col-md-3">
          <label>Blood Group: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="blood_group">
        </div>
        <div class="form-group col-md-3">
          <label>Genotype: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="genotype">
        </div>
        <div class="form-group col-md-5">
          <label>Known Allergies: <strong class="text-danger">*</strong></label>
          <textarea class="form-control" name="known_allergies"></textarea>
        </div>
      </fieldset>
    
      <div class="form-group mt-4">
        <button class="btn btn-success form-control" type="submit">Create Patient</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>