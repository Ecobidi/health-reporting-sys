<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Prescription</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Prescriptions</h4>
      <table class="table table-bordered table-striped">
        <thead class="text-white font-weight-bold">
          <tr>
            <td>Patient Reg. No.</td>
            <td>Doctor's UserID</td>
            <td>Drug Prescription</td>
            <td>Doctor's Diagnosis</td>
            <td></td>
          </tr>
        </thead>
        <tbody class="text-white">
          <% prescriptions.forEach((m) => { %>
            <tr>
              <td class="text-right"><%= m.patient_reg_no %></td>
              <td><%= m.doctor_user_id %></td>
              <td><%= m.drug_prescription %></td>
              <td><%= m.diagnosis.diagnosis %></td>
              <td>
                <a href='<%= "/prescriptions/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 

<%- include ('partials/bottom') %>